@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <div class="p-5 bg-white shadow-sm rounded-0">
                <h1 class="display-5 fw-light mb-3">Bienvenido a <strong class="text-dark">Nuestra Tienda Online</strong></h1>
                <p class="lead text-muted mb-4">
                    Descubre productos únicos, diseño elegante y una experiencia de compra minimalista.
                </p>

                <i class="fas fa-shopping-bag fa-3x text-secondary mb-4"></i>

                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <a href="@Url.Action("Index", "Productos")" class="btn btn-dark btn-lg rounded-0 transition px-4">
                        <i class="fas fa-store me-2"></i> Ver Productos
                    </a>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-secondary btn-lg rounded-0 transition px-4">
                        <i class="fas fa-user me-2"></i> Iniciar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition {
        transition: all 0.3s ease;
    }

    .btn:hover {
        opacity: 0.9;
    }

</style>
