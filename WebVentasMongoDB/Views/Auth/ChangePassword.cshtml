@model WebVentasMongoDB.ViewModels.CambiarPasswordVM
@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow p-4">
                <h4 class="text-center mb-4">🔑 Cambiar Contraseña</h4>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                @using (Html.BeginForm("ChangePassword", "Auth", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label>Contraseña Actual</label>
                        @Html.PasswordFor(m => m.PasswordActual, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="mb-3">
                        <label>Nueva Contraseña</label>
                        @Html.PasswordFor(m => m.PasswordNueva, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="mb-3">
                        <label>Confirmar Nueva Contraseña</label>
                        @Html.PasswordFor(m => m.ConfirmarPassword, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">Guardar Cambios</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
