@model WebVentasMongoDB.ViewModels.ProductoVM
@{
    ViewBag.Title = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm p-4">
            <h3 class="fw-normal mb-4 text-center">
                <i class="fas fa-box-open me-2"></i> Agregar nuevo producto
            </h3>

            @using (Html.BeginForm("Create", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-4">
                    <label class="form-label small text-uppercase text-muted">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control rounded-0", placeholder = "Nombre del producto" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label small text-uppercase text-muted">Descripción</label>
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control rounded-0", placeholder = "Descripción del producto", rows = 4 })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label small text-uppercase text-muted">Precio</label>
                    @Html.TextBoxFor(m => m.Precio, new { @class = "form-control rounded-0", type = "number", step = "0.01", placeholder = "0.00" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label small text-uppercase text-muted">Categoría</label>
                    @Html.DropDownList("CategoriaId", (SelectList)ViewBag.Categorias, "Seleccione una categoría", new { @class = "form-select rounded-0" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label small text-uppercase text-muted">Imagen del producto</label>
                    <input type="file" name="imagenFile" class="form-control rounded-0" accept="image/*" />
                </div>

                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-success rounded-0 transition">
                        <i class="fas fa-save me-1"></i> Guardar
                    </button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary rounded-0 transition" })
                </div>
            }
        </div>
    </div>
</div>
