@model WebVentasMongoDB.ViewModels.AuthVM
@{
    ViewBag.Title = "Registro de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <div class="register-card p-5 shadow-sm bg-white">
            <div class="text-center mb-4">
                <div class="icon-circle mb-3">
                    <i class="fas fa-user-plus fa-2x"></i>
                </div>
                <h3 class="fw-normal">Crear Cuenta</h3>
                <p class="text-muted small">Llena el siguiente formulario para registrarte</p>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert-message">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <span>@ViewBag.Message</span>
                </div>
            }

            @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-4">
                    <label class="form-label small fw-medium">Nombre completo</label>
                    @Html.TextBoxFor(m => m.NombreDeUsuario, new { @class = "form-control", placeholder = "Ej. Ana González", required = "required" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label small fw-medium">Correo electrónico</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "correo@ejemplo.com", required = "required" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label small fw-medium">Contraseña</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••", required = "required" })
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-dark">Registrarse</button>
                </div>

                <div class="text-center">
                    @Html.ActionLink("¿Ya tienes cuenta? Inicia sesión", "Login", "Auth", null, new { @class = "text-decoration-none small transition" })
                </div>
            }
        </div>
    </div>
</div>

<style>
    :root {
        --color-primary: #212529;
        --color-secondary: #f8f9fa;
        --color-accent: #e9ecef;
        --color-text: #495057;
        --color-danger: #f8d7da;
        --color-danger-text: #842029;
    }

    body {
        background-color: var(--color-secondary);
        color: var(--color-text);
    }

    .register-card {
        border-radius: 2px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: var(--color-accent);
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        color: var(--color-primary);
    }

    .form-label {
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-control {
        border: 1px solid var(--color-accent);
        border-radius: 0;
        padding: 0.8rem 1rem;
        font-size: 0.9rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--color-primary);
            box-shadow: none;
        }

    .btn-dark {
        background-color: var(--color-primary);
        border: none;
        border-radius: 0;
        padding: 0.75rem;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

        .btn-dark:hover {
            background-color: black;
        }

    .alert-message {
        background-color: var(--color-danger);
        color: var(--color-danger-text);
        padding: 0.8rem 1rem;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        border-left: 4px solid #dc3545;
    }

    .transition {
        transition: color 0.3s ease;
    }

        .transition:hover {
            color: #000;
        }
</style>
