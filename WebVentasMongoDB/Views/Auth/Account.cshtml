@model WebVentasMongoDB.ViewModels.AuthVM
@{
    ViewBag.Title = "Registrar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="text-center mb-4">Registrar Nuevo Usuario</h3>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }

        @using (Html.BeginForm("Account", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label>Nombre completo</label>
                @Html.TextBoxFor(m => m.NombreDeUsuario, new { @class = "form-control", placeholder = "Nombre Completo" })
            </div>

            <div class="form-group mb-3">
                <label>Correo electrónico</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo electrónico" })
            </div>

            <div class="form-group mb-3">
                <label>Contraseña</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
            </div>

            <div class="form-group mb-3">
                <label>Seleccionar Rol</label>
                @Html.DropDownList("Roles", ViewBag.Roles as SelectList, "Selecciona un rol", new { @class = "form-control" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Registrar Usuario</button>
            </div>
        }
    </div>
</div>
